{
  "version": "0.2.0",
  "configurations": [
    {
      // Use IntelliSense to find out which attributes exist for C# debugging
      // Use hover for the description of the existing attributes
      // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
      "name": "launch console",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/src/ConsoleApp/bin/Debug/net8.0/ConsoleApp.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/ConsoleApp",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "launch API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildApi",
      "program": "${workspaceFolder}/src/Api/bin/Debug/net8.0/Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Api",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "launch API with controllers",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildApiWithController",
      "program": "${workspaceFolder}/src/ApiWithControllers/bin/Debug/net8.0/ApiWithControllers.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/ApiWithControllers",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
